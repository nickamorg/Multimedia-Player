<UserControl x:Class="SensorsController.UserControlMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:k="http://schemas.microsoft.com/kinect/2013"
                mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="480"
             Width="1920" Height="1080"
             MinWidth="1920" MaxWidth="1920"
             MinHeight="1080" MaxHeight="1080"
             >
    <Grid>
        <k:KinectSensorChooserUI x:Name="sensorChooserUi" KinectSensorChooser="{Binding KinectSensorChooser}" HorizontalAlignment="Center" Margin="0 0 0 5"/>
        <k:KinectRegion x:Name="kinectRegion" Width="1920" Height="1080">
        </k:KinectRegion>
    </Grid>
</UserControl>
